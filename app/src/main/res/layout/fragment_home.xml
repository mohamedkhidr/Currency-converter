<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.khidrew.currency.viewModels.SharedViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".screens.HomeFragment">

        <LinearLayout
            android:id="@+id/ll_from"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_bg"
            android:elevation="@dimen/home_elevation"
            android:orientation="vertical"
            android:layout_margin="8dp"
            android:outlineSpotShadowColor="@color/shadowColor"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_currency_from"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="28sp"
                app:drawableEndCompat="@drawable/ic_arrow_down"
                android:text="@{viewModel.fromCurrency}"
                tools:text="EGP" />

            <EditText
                android:id="@+id/et_amount_from"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:background="@drawable/rounded_outlined"
                android:inputType="numberDecimal"
                android:padding="4dp"
                android:textSize="24sp"
                android:text="@={viewModel.fromAmount}"/>
        </LinearLayout>
        <com.google.android.material.button.MaterialButton
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            style="@style/Widget.Material3.Button.IconButton.Filled"
            app:cornerRadius="5dp"
            android:onClick="@{()-> viewModel.swapCurrencies()}"
            app:icon="@drawable/baseline_swap_horiz_24"
            app:iconGravity="textStart"
            app:iconSize="50dp"
            android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:id="@+id/ll_to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_bg"
            android:elevation="@dimen/home_elevation"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:outlineSpotShadowColor="@color/shadowColor"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_currency_to"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="28sp"
                app:drawableEndCompat="@drawable/ic_arrow_down"
                android:text="@{viewModel.toCurrency}"
                tools:text="EGP" />

            <EditText
                android:id="@+id/et_amount_to"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:background="@drawable/rounded_outlined"
                android:inputType="numberDecimal"
                android:padding="4dp"
                android:textSize="24sp"
                android:text="@={viewModel.toAmount}"/>
        </LinearLayout>


    </LinearLayout>
</layout>